# Режим приложения
PUBLIC_MODE=development
NODE_ENV=development

# Базовые настройки
PORT=3000

# Настройки для бота Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
BOT_USERNAME=UniFarming_Bot

# Клиентские переменные (должны начинаться с VITE_)
VITE_BOT_USERNAME=UniFarming_Bot
VITE_APP_NAME=UniFarm

# Административный доступ
ADMIN_SECRET_KEY=your-admin-secret-key

# Оптимизированная реферальная система
USE_OPTIMIZED_REFERRALS=false